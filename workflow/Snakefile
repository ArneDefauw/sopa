from utils import WorkflowPaths, dump_args

assert "sdata_path" in config.keys(), "Argument --sdata_path is required"

paths = WorkflowPaths(config["sdata_path"])

rule all:
    input:
        paths.explorer_experiment,

# rule to_spatialdata:
